{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ES2020", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["./scripts/**/*", "./src/**/*", "./tests/**/*", "./types.d.ts"]
}
